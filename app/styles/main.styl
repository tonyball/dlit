.brand-logo
	min-width 9%
	max-width 9%
	
@media screen and (min-width: 660px)
	nav
		padding-left 1em !important
		padding-right 1em !important
		background url(/images/dlit-logo.png) center center no-repeat
		background-size 100px
		
footer 
	padding-left 1em
	width 100%
	height 100px
	background-color rgba(201,201,201,0.5)
	bottom 0
	margin-bottom: -20px !important
	left 0
	position relative
					
html,body 
	margin 0
	padding 0
	height 100%
	background-color #f1f1f1

@media screen and (max-width: 380px)
	.page-title
		h5
			font-size 20px !important
			line-height 30px !important
			font-weight bold !important
			
@media screen and (max-width: 369px)
	.page-title
		h5
			font-size 14px !important
			line-height 30px !important
			font-weight bold !important

@media screen and (max-width: 340px)
	.page-title
		h5
			font-size 12px !important
			line-height 30px !important
			font-weight bold !important

.page-title:hover
	background-color transparent

.container 
	// min-height 100%
	position relative

nav
	ul
		li
			a
				.material-icons 
					padding-top 0.45em
					padding-bottom -0.45em
		h4 
			margin-top 0.35em !important
			margin-left 1em !important

.material-icons
	padding-bottom -0.45em

.notification-icon
	.material-icons:hover
		color darkorange
		transform: rotate(20deg);
	
.notification-icon:hover
	max-height 65 !important

ul.notifications 
	margin-top: -5px
	border-bottom 1px solid lightgray

ul.notifications
	div 
		header 
			text-align center
			line-height 1.345 !important
			font-weight bold
			
.notify-item 
	min-height 50px
	max-height 75px
	min-width 250px !important
	max-width 550px !important
	font-size 0.785em !important
	overflow auto
	border-bottom 1px solid lightgray

.notify-logo 
	width 10% !important
	margin-top -1em !important
	margin-right 10px


div.notifications-header
	background-color #f1f1f1 !important
	color black !important


.mdi-navigation-menu:hover
	color orange

ul.side-nav
	li:hover
		color orange
	li.active
		border-bottom 5px solid darkorange
		background-color #f0f0f0
		font-weight bolder
nav
	img.circle 
		padding-top 5px
	
.input-field 
	input[type=text]:focus, input[type=password]:focus
		border-bottom 1px solid orange !important
		color #000 !important
		box-shadow 0 1px 0 0 orange !important
	input[type=text]:focus + label , input[type=password]:focus + label
		color orange !important
	input[type=text].valid, input[type=password].valid
		color green !important
	input[type=text].invalid, input[type=password].invalid
		color red !important
	i.prefix.active
		color black !important

a.collection-item:hover
	background-color #ffede5 !important

.btn-flat:hover
	background-color #ffd1ac

th
	cursor pointer

tr.selected
	background-color #ffddc3 
	font-weight bolder
.tableForStdDetail
	tr
		cursor pointer
	tr:hover
		background-color #ffddc3
.collapsible-header.active
	font-weight bolder
.dropdown-content li
	span
		color black !important

.card
	overflow auto !important
	
.user-avatar 
	cursor pointer
	border-radius 15%
	padding 30px 30px
	border 3px solid #373432

.evolution-line 
	background-color rgba(5,5,5,0.85)
	border 5px solid
	cursor pointer
	border-radius 20px
	position absolute
	top 16%
	left 16%
	z-index 9999
	padding 5px

h6
	font-weight bolder !important
	font-size 1.35em !important

.badge-image
	max-width 50%

.user-badges
	max-width 70%
.badge-box
	max-width 20%
	max-height 20%
	font-size 0.75em
	text-align center
	display inline-block

.show-badges
	max-width 30%
	float left
	
