script.
	$(document).ready(function(){
		$('.modal-trigger').leanModal();
		$('.tooltipped').tooltip({delay: 50});
		$('.evolution-line').hide();
		$('.avatar').on('mouseenter',function(){
			$('.evolution-line').fadeToggle('slow');
		});
		$('.avatar').on('mouseleave',function(){
			$('.evolution-line').fadeToggle('slow');
		});
	});